        <div class="cooking-point2">
         <div class="weight-bold-text">
           ポイント2
          <span class="indispensable">必須</span>
         </div>
         <%= f.text_area :point2, class:"cooking-point", id:"cooking-point", placeholder:"美味しくなるポイントを記入 (必須 1,000文字まで)", row:"10", maxlength:"1000" %>
        </div>
      </div>

      <div class="cooking-img-upload">
