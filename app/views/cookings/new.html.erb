<div class="cooking-post-contents">
  <div class="cooking-post-main">
    <h2 class="cooking-post-title">レシピを投稿しよう！</h2>

   <% form_with(model: :hoge, local: true) do |f| %>
                                              
      <div class="cooking-new-items">
        <div class="weight-bold-text">
          料理名
         <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :cooking_name, class:"cooking-text", id:"cooking-item-name", placeholder:"料理名（必須 10文字まで)", maxlength:"10" %>
        <div class="cooking-material">
          <div class="weight-bold-text">
            材料
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :material, class:"cooking-text", id:"cooking-material-info", placeholder:"材料を記入（必須 1,000文字まで)", rows:"10", maxlength:"1000" %>
        </div>
      </div>
                                                           
      <div class="cooking-img-upload">
        <div class="weight-bold-text">
          料理完成画像
          <span class="indispensable">必須</span>
        </div>
        <div class="click-upload">
          <p>クリックして料理完成画像を載せましょう</p>
          <%= f.file_filed :image, id:"cooking-image" %>
        </div>
      </div>
                                            
      <div class="cooking-new-items">
        <div class="cooking-recipe">
         <div class="weight-bold-text">
          レシピ
          <span class="indispensable">必須</span>
         </div>
         <%= f.text_area :recipe, class:"cooking-text", id:"cooking-recipe", placeholder:"レシピを記入 (必須 1,000文字まで)", row:"10", maxlength:"1000" %>
        </div>
      </div>
      
      <div class="cooking-img-upload">
        <div class="weight-bold-text">
          途中過程画像
          <span class="indispensable">必須</span>
        </div>
        <div class="click-upload">
          <p>クリックして料理過程画像を載せましょう</p>
          <%= f.file_filed :image, id:"cooking-image" %>
        </div>
      </div>
      <div class="cooking-new-items">
        <div class="cooking-point1">
         <div class="weight-bold-text">
           ポイント1
          <span class="indispensable">必須</span>
         </div>
         <%= f.text_area :point1, class:"cooking-point", id:"cooking-point", placeholder:"美味しくなるポイントを記入 (必須 1,000文字まで)", row:"10", maxlength:"1000" %>
        </div>
      </div>

      <div class="cooking-img-upload">
