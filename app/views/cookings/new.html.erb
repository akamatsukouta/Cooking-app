        </div>
        <div class="click-upload">
          <p>クリックして料理過程画像を載せましょう</p>
          <%= f.file_filed :image, id:"cooking-image" %>
        </div>
      </div>
      <div class="cooking-new-items">
        <div class="cooking-point5">
         <div class="weight-bold-text">
           ポイント1
          <span class="indispensable">必須</span>
         </div>
         <%= f.text_area :point5, class:"cooking-point", id:"cooking-point", placeholder:"美味しくなるポイントを記入 (必須 1,000文字まで)", row:"10", maxlength:"1000" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">制作時間</label>
          <span class="indispensable">必須</span>
         <%= f.collection_select(:hoge, [], :hoge, :hoge, {}, {class:"select-box", id:"cooking_time_fee"}) %>  
        </div>
      </div>
       
      <div class="cooking-post-btn">
         <%= f.submit "投稿する" ,class:"cooking-btn" %>
         <%= link_to 'トップページに戻る', root_path, class:"back_btn" %>   
      </div>
   <% end %>
  </div>
</div>